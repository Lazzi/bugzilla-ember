<div class="bug">
  <div class="header">
    <span>
      {{#linkTo "bug" this}}Bug {{id}}{{/linkTo}}
      <span> - {{summary}}</span>
    </span>
  </div>

  <div class="detail">
    <div class="left">
      <div class="status">
        <span>Status:</span>
        <span>{{status}}</span>
      </div>
      <div class="whiteboard">
        <span>Whiteboard:</span>
        <span></span>
      </div>
      <div class="keywords">
        <span>Keywords:</span>
        <span>{{keywords}}</span>
      </div>
      <div class="product">
        <span>Product:</span>
        <span>{{product}}</span>
      </div>
      <div class="component">
        <span>Component:</span>
        <span>{{component}}</span>
      </div>
      <div class="version">
        <span>Version:</span>
        <span>{{version}}</span>
      </div>
      <div class="platform">
        <span>Hardware:</span>
        <span>{{platform}}</span>
        <span>{{op_sys}}</span>
      </div>
      <div class="importance">
        <span>Importance:</span>
        <span>
          <span>{{priority}}</span>
          <span>{{severity}}</span>
        </span>
      </div>
      <div class="assigned_to">
        <span>Assignee:</span>
        <span>{{assigned_to.real_name}}</span>
      </div>
      <div class="qa_contact">
        <span>QA Contact:</span>
        <span>{{qa_contact.name}}</span>
      </div>
      <div class="url">
        <span>URL:</span>
        <span>{{url}}</span>
      </div>
      <div class="depends_on">
        <span>Depends on:</span>
        <ul>
          {{#each depends_on_bugs}}
            <li {{bindAttr title="summary"}}>
              {{#linkTo "bug" this classNameBindings="isResolved"}}{{aliasOrId}}{{/linkTo}}
            </li>
          {{else}}
            {{#if depends_on_bugs.isLoaded}}
              <em>none</em>
            {{/if}}
          {{/each}}
        </ul>
      </div>
      <div class="blocks">
        <span>Blocks:</span>
        <ul>

          {{#each blocks_bugs}}
            <li {{bindAttr title="summary"}}>
              {{#linkTo "bug" this classNameBindings="isResolved"}}{{aliasOrId}}{{/linkTo}}
            </li>
          {{else}}
            {{#if blocks_bugs.isLoaded}}
              <em>none</em>
            {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>

    <div class="padding"></div>

    <div class="right">
      <div class="creator">
        <span>Reporter:</span>
        <span>{{creator.real_name}}</span>
      </div>
      <div class="last_change_time">
        <span>Changed:</span>
        <span>{{last_change_time}}</span>
      </div>
      <div class="cc">
        <span>CC:</span>
        <ul>
          {{#each cc}}
            <li>{{name}}</li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>

  <div class="comments">
    {{#if comments.isLoading}}
      Loading comments...
    {{/if}}
    
    {{#each comments}}
      <div class="comment">
        <div class="header">
          <span>{{creator.name}}</span>
          <span>{{creation_time}}</span>
          <span></span>
        </div>
        <pre>{{text}}</pre>
      </div>
    {{/each}}
  </div>
</div>